<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TEXTMessageNOACKSPREADActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/ExitTextLocalIPPortDestination"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:hint="Destination IP:Port"
            android:text="192.168.194.150:12356" />

        <EditText
            android:id="@+id/ExitTextPublicIPPortDestination"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:hint="Destination IP:Port"
            android:text="109.114.28.160:12356" />

    <EditText
        android:id="@+id/EditText_TextMessage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:onClick="BtnTextMessageNOACKSPREADTEST"
        android:text="Text Message NOACK" />

    </LinearLayout>

</RelativeLayout>